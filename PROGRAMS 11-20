11.Check for Prime Number
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        int n = 7, flag = 0;
        for (int i = 2; i < n; i++) if (n % i == 0) flag = 1;
        Console.WriteLine(flag == 0 ? "Prime" : "Not Prime");
    }
} 


12. Convert Celsius to Fahrenheit
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        double celsius = 25;
        double fahrenheit = (celsius * 9 / 5) + 32;
        Console.WriteLine($"Fahrenheit: {fahrenheit}");
    }
}


13. Calculate the Area of a Circle
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        double radius = 5;
        double area = Math.PI * radius * radius;
        Console.WriteLine($"Area: {area}");
    }
}


14. Check Leap Year
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        int year = 2024;
        Console.WriteLine(DateTime.IsLeapYear(year) ? "Leap Year" : "Not Leap Year");
    }
}



15. Generate Random Number
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        Random rand = new Random();
        Console.WriteLine($"Random Number: {rand.Next(1, 100)}");
    }
}


16. Swap Two Numbers Without Temp
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        int a = 5, b = 10;
        a = a + b; b = a - b; a = a - b;
        Console.WriteLine($"a: {a}, b: {b}");
    }
}



17. Find ASCII Value of a Character
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        char ch = 'A';
        Console.WriteLine($"ASCII of {ch}: {(int)ch}");
    }
}



18. Count Words in a Sentence
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        string sentence = "Hello world of .NET";
        int wordCount = sentence.Split(' ').Length;
        Console.WriteLine($"Words: {wordCount}");
    }
}



19. Reverse an Array
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        int[] arr = { 1, 2, 3, 4, 5 };
        Array.Reverse(arr);
        Console.WriteLine(string.Join(", ", arr));
    }
}


20. Check Palindrome String
csharp
Copy
Edit
using System;
class Program
{
    static void Main()
    {
        string input = "madam";
        string reversed = new string(input.Reverse().ToArray());
        Console.WriteLine(input == reversed ? "Palindrome" : "Not Palindrome");
    }
}
